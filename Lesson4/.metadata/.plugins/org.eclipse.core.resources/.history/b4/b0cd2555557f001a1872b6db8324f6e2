#include <stdio.h>

int invertNum(int num);
//int invertNum1(int num);

int main() {

	printf("LOL");

	int inv = invertNum(876543210);
	printf("%d", inv);

//	int inv1 = invertNum1(876543210);
//	printf("%d", inv1);

}


int invertNum(int num){
	int res = 0;
	while(num) {
		res *= 10 + num % 10;
		num /= 10;
	}

	return res;
}

#include <stdio.h>

int invertNum(int num);
int invertNum1(int num);

int main() {
	int inv = invertNum(876543210);
	printf("%d", inv);

	int inv1 = invertNum1(876543210);
}


int invertNum(int num){
	int res = 0;
	while(num) {
		res *= 10 + num % 10;
		num /= 10;
	}

	return res;
}

int invertNum1(int num){
	int res = 0;
	int count = 1;
	for (count = 1; num ; num =/ 10) {
		res *= 10 + num;
	}
	return res;
}


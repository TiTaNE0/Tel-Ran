#include<stdio.h>
float negPow(float x, int y);

int main(){

	float power = negPow(4, 4);
	printf("%.0f", power);

	return 0;
}

float negPow(float x, int y){
	float res=1;
	int i = 1;
	while (i <= y) {
		if (y >= 0) {
			res = res * x;
		} else {
			res = 1 / (res * y);
		}
	i++;
	return res;
	}
}

#include <stdio.h>

int invertNum(int num);
int invertNum1(int num);

int main() {
	int inv = invertNum(876543210);
	printf("%d", inv);
}


int invertNum(int num){
	int res = 0;
	while(num) {
		res = (res *= 10) + (num % 10);
		num /= 10;
	}

	return res;
}

int invertNum1(int num){
	int res = 0;
	for (num) {
		res = res *= 10 + num %= 10;
	}
	return res;
}


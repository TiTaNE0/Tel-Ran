#include<stdio.h>
void starPrinterX(int q);
void starPrinter05left(int q);
void starPrinter025top(int q);

int main() {

	starPrinter025top(11);

	return 0;
}

void starPrinterX(int q) {
	int i, j;
	for (i = 1; i <= q; i++) {
		for (j = 1; j <= q; j++) {
			if (i == 1 ||  i == q || j == 1 || j == q || i == j || (j == q-i+1)){
				printf("* ");
			} else {
			printf("  ");
			}
		}
		printf("\n");
	}
	printf("\n");
}


void starPrinter05left(int q) {
	int i, j;
	for (i = 1; i <= q; i++) {
		for (j = 1; j <= q; j++) {
			if (i == 1 || i == q || j == 1 || (j <= i) || (j == i) || j == q) {
				printf("* ");
			} else {
				printf("  ");
			}
		}
		printf("\n");
	}
}

void starPrinter025top(int q) {
	int i, j;
	for (i = 1; i <= q; i++) {
		for (j = 1; j <= q; j++) {
			if (i == 1 || i == q || j == 1 || (i <= j && i <= q-i/2)
			|| (j == i) || j == q || (j == q-i+1)) {
				printf("* ");
			} else {
				printf("  ");
			}
		}
		printf("\n");
	}
}

#include <stdio.h>

int invertNum(int num);
void contNum(int num, int num1);

int main() {

	printf("%d\n", invertNum(123456789));

	contNum(253705, 37);

}
void contNum(int num, int num1){
	int numDiv = 0;
	int numDiv1 = 0;
	int count;
	int count1;
	for (count = 1; num; num /= 10) {
		numDiv += num % 10;
		for (count1 = 1; num1; num1 /= 10) {
			numDiv1 += num1 % 10;
		}

	}
}


int invertNum(int num){
	int res = 0;
	int count;
	for (count = 1; num; num /= 10) {
		res *= 10;
		res += num % 10;
	}
	return res;
}

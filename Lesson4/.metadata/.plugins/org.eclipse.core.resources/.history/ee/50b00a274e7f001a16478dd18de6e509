#include <stdio.h>

int invertNum(int num);


int main() {
	int inv = invertNum(876543210);
	printf("%d", inv);
}


int invertNum(int num){
	int res = 0;
	while(num) {
		res *= 10;
		res = res + num % 10;
		num /= 10;

	}
	return res;
}

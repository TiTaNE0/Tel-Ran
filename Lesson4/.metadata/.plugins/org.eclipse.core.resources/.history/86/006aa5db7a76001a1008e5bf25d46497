#include<stdio.h>
#include<unistd.h>

void luckyTicket(int num);

int main(){

	luckyTicket(5599671); // 21 + 21

	return 0;
}

void luckyTicket(int num){
	int res1 = 0;
	int res2 = 0;
	while (num) {
		int digit = num % 10;
		res1 += digit;
		num /= 10;

		digit = num % 10;
		res2 += digit;
		num /= 10;
	}
	if (res1 == res2) {
		int i = res1;
		while(i){
			printf("*");
			sleep(1000);
			i--;
			if (i % 2 == 0){
			printf("\n");
			}
		}
		printf("*** BINGO! %d = %d ***\n", res1, res2);
	} else {
		printf("Not your day! %d doesn't match %d.\n", res1, res2);
	}
}

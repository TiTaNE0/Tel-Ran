#include <stdio.h>

int invertNum(int num);
int invertNum1(int num1);

int main() {

	printf("LOL\n");

	int inv = invertNum(123456789);
	printf("%d\n", inv);

	int inv1 = invertNum1(123456789);
	printf("%d\n", inv1);

}


int invertNum(int num){
	int res = 0;
	while(num) {
		res *= 10;
		res = res + num % 10;
		num /= 10;
	}

	return res;
}

int invertNum1(int num1){
	int res = 0;
	int count;
	for (count = 1; num1; num1 /= 10) {
		res *= 10;
		res += num1 % 10;
	}
	return res;
}

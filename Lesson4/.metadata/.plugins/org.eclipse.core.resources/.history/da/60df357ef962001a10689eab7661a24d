#include<stdio.h>
float getPi();
float getLength(float radius);
float getG();

int main() {

	float pi = getPi();
	printf("Pi = %f\n", pi);

	float length = getLength(10);
	printf("length = %.2f\n", length);

	length = getLength(20);
	printf("lenght = %.2f\n", length);

	printf("lenght = %.2f\n", getLength(30));

	return 0;
}


float getG(){
	return 9.8;
}

float getLength(float radius) {
	float res = 2 * getPi() * radius;
	return res;
}

float getPi() {
	return 3.1415926;
}

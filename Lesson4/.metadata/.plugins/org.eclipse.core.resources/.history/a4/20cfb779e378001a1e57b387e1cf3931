#include<stdio.h>

void luckyTicket(int num);
void luckyTicket1(int num);

int main(){

	luckyTicket(5599671); // 21 + 21

	return 0;
}

void luckyTicket(int num){
	int res1 = 0;
	int res2 = 0;
	while (num) {
		int digit = num % 10;
		res1 += digit;
		num /= 10;

		digit = num % 10;
		res2 += digit;
		num /= 10;
	}
	if (res1 == res2) {
		printf("BINGO! %d = %d\n", res1, res2);
	} else {
		printf("Not your day! %d doesn't match %d.\n", res1, res2);
	}
}

void luckyTicket1(int num){
	int res1 = 0;
	int res2 = 0;
	int pos = 1;
	while (num) {
		int digit = num % 10;
		if (pos % 2 == 0) {
			res1 += digit;
		} else {
			res2 += digit;
		}
		num /= 10;
		pos++;

	}
}
